{
  "name": "sample-solution-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "homepage": "https://github.com/iversonianGremling/SampleSolution",
  "author": {
    "name": "Sample Solution Team",
    "email": "contact@sample-solution.local"
  },
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "build": "tsc && vite build",
    "bundle-backend": "bash scripts/bundle-backend.sh",
    "build:electron": "npm run bundle-backend && npm run build && cross-env NODE_ENV=production electron-builder",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "rclone:share": "node scripts/rclone-share.mjs"
  },
  "build": {
    "appId": "com.sample-solution.app",
    "productName": "Sample Solution",
    "files": [
      "dist/**/*",
      "electron/**/*.cjs",
      "electron/runtime-config.json",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "embedded-backend",
        "to": "embedded-backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "embedded-python",
        "to": "embedded-python",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "**/*.node",
      "embedded-backend/**/*",
      "embedded-python/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "sample-solution-${version}-${arch}.${ext}",
      "category": "Audio",
      "maintainer": "Sample Solution Team <contact@sample-solution.local>"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "sample-solution-${version}-${arch}-mac.${ext}",
      "category": "public.app-category.music"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "sample-solution-setup-${version}-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "sample-solution-portable-${version}-${arch}.${ext}"
    }
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@saehrimnir/druidjs": "^0.7.3",
    "@tanstack/react-query": "^5.17.0",
    "axios": "^1.6.5",
    "density-clustering": "^1.3.0",
    "driver.js": "^1.4.0",
    "lucide-react": "^0.309.0",
    "pixi.js": "^8.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-rotary-knob": "^3.0.3",
    "soundtouchjs": "^0.3.0",
    "tone": "^15.1.22",
    "wavesurfer.js": "^7.6.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^23.2.0",
    "msw": "^2.1.4",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.0",
    "wait-on": "^7.2.0"
  }
}
